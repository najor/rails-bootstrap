<nav class="navbar navbar-default">
  <div class="container">
    <div class="container-fluid">
      <div class="navbar-header">
        <%= link_to 'Home', home_index_path, class: 'navbar-brand' %>
      </div>
      <div class="nav navbar-nav navbar-right">
        <%= link_to 'Log out', sessions_logout_path, class: 'navbar-brand', style: 'color: blue' %>
      </div>
    </div>
  </div>
</nav>

<div class="home-main">
  <div class="table-responsive">
    <table class="table table-striped table-hover">
      <tr>
        <th><%= sortable 'status', I18n.t('status') %></th>
        <th><%= sortable 'updated_at', I18n.t('updated_at') %></th>
        <th><%= I18n.t('product') %></th>
      </tr>
      <% @orders.each do |order| %>
        <tr>
          <td><%= order.status %></td>
          <td><%= order.updated_at.strftime('%d %b %Y') %></td>
          <td><%= order.product.name %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
