<div class="main">
  <div class="jumbotron">
    <div class="container">
      <h1>Welcome to e-commerce</h1>
      <p>This is an example of how to implement a basic e-commerce with Rails</p>
      <div class="text-center">
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#login-modal">Login</button>
        <button type="button" class="btn btn-primary">Sign up</button>
      </div>
    </div>
  </div>
  <% if flash[:message] %>
    <div class="alert alert-success">
      <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
      <%= content_tag :strong, flash[:message] %>
    </div>
  <% end %>
</div>





<div class="modal fade" id="login-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
  <div class="modal-dialog">
    <div class="loginmodal-container">
      <h1>Login to Your Account</h1><br>
      <%= form_tag(:action => 'login_attempt') do %>
        <%= text_field('email', nil, placeholder: 'Email') %>
        <%= password_field_tag('pass', nil, placeholder: 'Password') %>
        <%= submit_tag('Log In', class: 'login loginmodal-submit') %>
      <% end %>

      <div class="login-help">
        <a href="#">Register</a> - <a href="#">Forgot Password</a>
      </div>
    </div>
  </div>
</div>